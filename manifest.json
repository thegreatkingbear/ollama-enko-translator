{
    "name": "Translate with Ollama (ENâ†’KO)",
    "description": "Right-click selected English text to translate it into Korean using a local Ollama model.",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage",
        "scripting",
        "activeTab",
        "clipboardWrite",
        "notifications",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "http://localhost:11434/*",
        "http://127.0.0.1:11434/*",
        "http://[::1]:11434/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}